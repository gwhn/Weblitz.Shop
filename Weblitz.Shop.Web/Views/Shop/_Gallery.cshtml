@model Weblitz.Shop.Web.Models.View.Gallery

@if (Model.Items.Count > 0)
{
    <div class="row">
        <div class="span6">
            <h3>
                @Model.Title
            </h3>        
        </div>
        <div class="span6">
            @{ Html.RenderPartial("_Pager", Model); }
        </div>
    </div>
    <div class="row-fluid">
        <ul class="thumbnails">            
            @for (var i = 0; i < 6; i++)
            {
                <li class="span2">
                    @if (i < Model.Items.Count)
                    {
                        var x = Model.Items[i];
                        <div class="thumbnail">
                            <div class="sticker">
                                @if (x.IsNew)
                                {
                                    <div class="sticker-inner sticker-new text-center">New</div>
                                }
                                @if (x.IsDiscounted)
                                {
                                    <div class="sticker-inner sticker-sale text-center">Sale</div>
                                }
                                @Html.ImageLink(x.Image.Source, x.Image.AltText, new {width = x.Image.Width, height = x.Image.Height}, x.Link.ActionName, x.Link.ControllerName, x.Link.RouteValues, null)
                            </div>
                            <div class="caption">
                                <h4>
                                    @Html.ActionLink(x.Title, x.Link.ActionName, x.Link.ControllerName, new { id = x.Id }, null)
                                </h4>
                                <div class="row-fluid">
                                    <div class="span6 @if (x.IsDiscounted) {<text>muted line-through</text>}">
                                        @x.Price
                                    </div>
                                    <div class="span6 text-right">
                                        @if (x.IsDiscounted)
                                        {
                                            @x.DicountedPrice
                                        }
                                    </div>
                                    <div class="btn-group dropup">
                                        @Html.ActionLink("Add to cart", "Buy", "Shop", new { id = x.Id }, new { @class = "btn btn-primary btn-small"})
                                        <button class="btn btn-primary btn-small dropdown-toggle" data-toggle="dropdown">
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                @Html.ActionLink("View details", "Product", "Shop", new { id = x.Id }, null)
                                            </li>
                                            <li>
                                                @Html.ActionLink("Add to wishlist", "Wishlist", "Shop", new { id = x.Id }, null)
                                            </li>
                                            <li>
                                                @Html.ActionLink("Add to compare", "Compare", "Shop", new { id = x.Id }, null)
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </li>
            }
        </ul>
    </div>
}
