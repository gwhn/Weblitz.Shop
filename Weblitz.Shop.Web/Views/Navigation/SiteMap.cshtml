@model IList<Weblitz.Shop.Web.Models.View.Section>

@if (Model.Count > 0)
{
    const int columns = 3;
    for (var m = 0; m < (Model.Count/columns) + 1; m++)
    {
        <div class="row">        
            @for (var n = 0; n < columns; n++)
            {
                var i = (m*columns) + n;
                <div class="span4">
                    @if (i < Model.Count && Model[i].Links.Count > 0)
                    {
                        <h3>@Model[i].Name</h3>
                        <ul class="unstyled">
                            @foreach (var x in Model[i].Links)
                            {
                                <li>@Html.ActionLink(x.LinkText, x.ActionName, x.ControllerName, x.RouteValues)</li>
                            }
                        </ul>
                    }
                </div>
            }
        </div>
    }
}