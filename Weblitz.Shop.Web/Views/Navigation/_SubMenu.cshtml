@model System.Collections.Generic.ICollection<Weblitz.Shop.Web.Models.View.MenuItem>

@if (Model.Count > 0)
{
    <ul class="dropdown-menu">
        @foreach (var x in Model)
        {
            if (x.Children.Count > 0)
            {
                <li class="@x.ActiveClass dropdown-submenu">
                    <a href="#">@x.Name</a>
                    @{ Html.RenderPartial("_SubMenu", x.Children); }
                </li>
            }
            else
            {
                <li class="@x.ActiveClass">
                    @Html.ActionLink(x.Name, "Category", "Shop", new {id = x.Id}, null)
                </li>
            }
        }
    </ul>
}