@model Weblitz.Shop.Web.Models.View.AccountSummary

@if (Model.IsAuthenticated)
{
    <ul>
        <li>You are logged in as @Model.UserName</li>
        <li>@Html.ActionLink("Log out", "LogOut")</li>
    </ul>
}
else
{
    <ul>
        <li>Welcome visitor</li>
        <li>@Html.ActionLink("Log in or create and account", "LogIn")</li>
    </ul>
}

@using (Html.BeginForm("Language", "Account"))
{
    <dl>
        <dt>@Html.LabelFor(x => x.LanguageId)</dt>
        <dd>
            @Html.DropDownListFor(x => x.LanguageId, Model.LanguageList)
            <input type="submit" value="Change"/>
        </dd>
    </dl>
}

@using (Html.BeginForm("Currency", "Account"))
{
    <dl>
        <dt>@Html.LabelFor(x => x.CurrencyId)</dt>
        <dd>
            @Html.DropDownListFor(x => x.CurrencyId, Model.CurrencyList)
            <input type="submit" value="Change"/>
        </dd>
    </dl>
}